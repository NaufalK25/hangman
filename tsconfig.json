{
    "compilerOptions": {
        "lib": [
            "es2020",
            "es2021",
            "dom"
        ],
        "module": "commonjs",
        "target": "es2021",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "importHelpers": true,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts",
    ]
}
